#!/usr/bin/python2.6

import os

join = os.path.join
base = os.path.dirname(os.path.abspath(os.path.realpath(__file__)))
base = os.path.dirname(base)

import sys

sys.path[0:0] = [
    join(base, 'parts/google_appengine'),
    join(base, 'parts/google_appengine/lib/antlr3'),
    join(base, 'parts/google_appengine/lib/django'),
    join(base, 'parts/google_appengine/lib/fancy_urllib'),
    join(base, 'parts/google_appengine/lib/ipaddr'),
    join(base, 'parts/google_appengine/lib/webob'),
    join(base, 'parts/google_appengine/lib/yaml/lib'),
    join(base, 'app'),
    join(base, 'app/distlib'),
    join(base, 'app/lib'),
    join(base, 'eggs/appfy.recipe.gae-0.9.2-py2.6.egg'),
    join(base, 'parts/google_appengine'),
    ]

_interactive = True
if len(sys.argv) > 1:
    _options, _args = __import__("getopt").getopt(sys.argv[1:], 'ic:m:')
    _interactive = False
    for (_opt, _val) in _options:
        if _opt == '-i':
            _interactive = True
        elif _opt == '-c':
            exec _val
        elif _opt == '-m':
            sys.argv[1:] = _args
            _args = []
            __import__("runpy").run_module(
                 _val, {}, "__main__", alter_sys=True)

    if _args:
        sys.argv[:] = _args
        __file__ = _args[0]
        del _options, _args
        execfile(__file__)

if _interactive:
    del _interactive
    __import__("code").interact(banner="", local=globals())
